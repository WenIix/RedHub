-- LocalScript: RedHub GUI (clean version)
-- Put inside StarterPlayerScripts or StarterGui

local Players = game:GetService("Players")
local GuiService = game:GetService("GuiService")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- === CONFIG ===
local DISCORD_URL = "https://discord.gg/9a3eaGvTYp" -- <--- replace with your link
local WINDOW_NAME = "RedHub"

-- === ScreenGui ===
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RedHubGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- === Main Frame ===
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0.45, 0, 0.25, 0) -- slightly narrower and taller
frame.Position = UDim2.new(0.275, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 14)
corner.Parent = frame

local outline = Instance.new("UIStroke")
outline.Color = Color3.fromRGB(60, 60, 60)
outline.Thickness = 1
outline.Parent = frame

-- === Title ===
local title = Instance.new("TextLabel")
title.Text = WINDOW_NAME
title.Size = UDim2.new(1, 0, 0.25, 0)
title.Position = UDim2.new(0, 0, -0.05, 0)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 28
title.Parent = frame

-- === Key Box ===
local keyBox = Instance.new("TextBox")
keyBox.PlaceholderText = "Enter Key"
keyBox.Text = ""
keyBox.ClearTextOnFocus = false
keyBox.Size = UDim2.new(0.65, 0, 0.2, 0)
keyBox.Position = UDim2.new(0.175, 0, 0.35, 0)
keyBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
keyBox.TextColor3 = Color3.fromRGB(235, 235, 235)
keyBox.Font = Enum.Font.Gotham
keyBox.TextSize = 18
keyBox.Parent = frame

local keyCorner = Instance.new("UICorner")
keyCorner.CornerRadius = UDim.new(0, 8)
keyCorner.Parent = keyBox

-- === Copy Discord Button (top) ===
local copyButton = Instance.new("TextButton")
copyButton.Text = "Copy Discord"
copyButton.Size = UDim2.new(0.35, 0, 0.2, 0)
copyButton.Position = UDim2.new(0.325, 0, 0.13, 0)
copyButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
copyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
copyButton.Font = Enum.Font.GothamBold
copyButton.TextSize = 20
copyButton.Parent = frame

local copyCorner = Instance.new("UICorner")
copyCorner.CornerRadius = UDim.new(0, 10)
copyCorner.Parent = copyButton

-- === Enter Button ===
local enterButton = Instance.new("TextButton")
enterButton.Text = "Enter"
enterButton.Size = UDim2.new(0.35, 0, 0.2, 0)
enterButton.Position = UDim2.new(0.325, 0, 0.63, 0)
enterButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
enterButton.TextColor3 = Color3.fromRGB(255, 255, 255)
enterButton.Font = Enum.Font.GothamBold
enterButton.TextSize = 20
enterButton.Parent = frame

local enterCorner = Instance.new("UICorner")
enterCorner.CornerRadius = UDim.new(0, 10)
enterCorner.Parent = enterButton

-- === Subtext ===
local hint = Instance.new("TextLabel")
hint.Text = "Enter your key here"
hint.Size = UDim2.new(1, 0, 0.15, 0)
hint.Position = UDim2.new(0, 0, 0.55, 0)
hint.BackgroundTransparency = 1
hint.TextColor3 = Color3.fromRGB(180, 180, 180)
hint.Font = Enum.Font.Gotham
hint.TextSize = 14
hint.Parent = frame

-- === Helper functions ===
local function tryCopyToClipboard(text)
	local ok = false
	pcall(function()
		if setclipboard then
			setclipboard(text)
			ok = true
		elseif syn and syn.set_clipboard then
			syn.set_clipboard(text)
			ok = true
		end
	end)
	return ok
end

local function notify(msg)
	pcall(function()
		StarterGui:SetCore("SendNotification", {
			Title = "RedHub",
			Text = msg,
			Duration = 3
		})
	end)
end

-- === Button Events ===
copyButton.MouseButton1Click:Connect(function()
	local ok = tryCopyToClipboard(DISCORD_URL)
	if ok then
		notify("Discord link copied!")
	else
		notify("Copy not supported, opening link.")
	end
	pcall(function()
		GuiService:OpenBrowserWindow(DISCORD_URL)
	end)
end)

enterButton.MouseButton1Click:Connect(function()
	local key = keyBox.Text
	if key == "" then
		notify("Please enter a key!")
	else
		notify("Key entered: " .. key)
	end
end)

-- === Appearance animation ===
frame.Position = UDim2.new(0.275, 0, 1, 0)
frame:TweenPosition(UDim2.new(0.275, 0, 0.35, 0), "Out", "Quad", 0.5, true)

-- === Auto copy Discord after appearing ===
task.wait(0.6)
copyButton:Activate()
copyButton.MouseButton1Click:Fire()
