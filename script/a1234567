```lua
-- LocalScript: RedHub GUI (updated layout)
-- Place this inside StarterPlayerScripts or StarterGui

local Players = game:GetService("Players")
local GuiService = game:GetService("GuiService")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- === CONFIG ===
local DISCORD_URL = "https://discord.gg/9a3eaGvTYp" -- Updated Discord link
local WINDOW_NAME = "RedHub"

-- === ScreenGui ===
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RedHubGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- === Main Frame ===
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 300, 0, 150) -- Adjusted size
frame.Position = UDim2.new(0.5, -150, 0.5, -75) -- Centered
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 12)
frameCorner.Parent = frame

local frameOutline = Instance.new("UIStroke")
frameOutline.Color = Color3.fromRGB(50, 50, 50)
frameOutline.Thickness = 2
frameOutline.Parent = frame

-- === Title ===
local title = Instance.new("TextLabel")
title.Text = WINDOW_NAME
title.Size = UDim2.new(0.8, 0, 0.2, 0)
title.Position = UDim2.new(0.1, 0, 0.05, 0)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- === Key Icon ===
local keyIcon = Instance.new("TextLabel")
keyIcon.Text = "ðŸ”‘"
keyIcon.Size = UDim2.new(0, 30, 0, 30)
keyIcon.Position = UDim2.new(0.1, 0, 0.3, 0)
keyIcon.BackgroundTransparency = 1
keyIcon.TextSize = 20
keyIcon.TextColor3 = Color3.fromRGB(255, 127, 80) -- Orange key color
keyIcon.Parent = frame

-- === Key Box ===
local keyBox = Instance.new("TextBox")
keyBox.PlaceholderText = "Enter Key"
keyBox.Text = ""
keyBox.ClearTextOnFocus = false
keyBox.Size = UDim2.new(0.7, 0, 0.2, 0)
keyBox.Position = UDim2.new(0.25, 0, 0.3, 0)
keyBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
keyBox.TextColor3 = Color3.fromRGB(200, 200, 200)
keyBox.Font = Enum.Font.Gotham
keyBox.TextSize = 16
keyBox.Parent = frame

local keyCorner = Instance.new("UICorner")
keyCorner.CornerRadius = UDim.new(0, 8)
keyCorner.Parent = keyBox

-- === Copy Discord Link Button ===
local copyButton = Instance.new("TextButton")
copyButton.Size = UDim2.new(0.4, 0, 0.2, 0)
copyButton.Position = UDim2.new(0.3, 0, 0.55, 0)
copyButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
copyButton.Text = ""
copyButton.Parent = frame

local copyCorner = Instance.new("UICorner")
copyCorner.CornerRadius = UDim.new(0, 10)
copyCorner.Parent = copyButton

local copyOutline = Instance.new("UIStroke")
copyOutline.Color = Color3.fromRGB(50, 50, 50)
copyOutline.Thickness = 2
copyOutline.Parent = copyButton

-- === Text on Copy Button ===
local copyText = Instance.new("TextLabel")
copyText.Text = "Copy Discord Link"
copyText.Size = UDim2.new(0.7, 0, 1, 0)
copyText.Position = UDim2.new(0.05, 0, 0, 0)
copyText.BackgroundTransparency = 1
copyText.TextColor3 = Color3.fromRGB(255, 255, 255)
copyText.Font = Enum.Font.GothamBold
copyText.TextSize = 16
copyText.TextXAlignment = Enum.TextXAlignment.Left
copyText.Parent = copyButton

-- === Discord Logo on the button (right side) ===
local discordIcon = Instance.new("ImageLabel")
discordIcon.Image = "rbxassetid://10874957036" -- Discord logo
discordIcon.Size = UDim2.new(0, 20, 0, 20)
discordIcon.Position = UDim2.new(0.75, 0, 0.5, -10)
discordIcon.BackgroundTransparency = 1
discordIcon.Parent = copyButton

-- === Enter Key Button ===
local enterButton = Instance.new("TextButton")
enterButton.Text = "Enter Key"
enterButton.Size = UDim2.new(0.4, 0, 0.2, 0)
enterButton.Position = UDim2.new(0.3, 0, 0.8, 0)
enterButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
enterButton.Font = Enum.Font.GothamBold
enterButton.TextColor3 = Color3.fromRGB(255, 255, 255)
enterButton.TextSize = 16
enterButton.Parent = frame

local enterCorner = Instance.new("UICorner")
enterCorner.CornerRadius = UDim.new(0, 10)
enterCorner.Parent = enterButton

local enterOutline = Instance.new("UIStroke")
enterOutline.Color = Color3.fromRGB(50, 50, 50)
enterOutline.Thickness = 2
enterOutline.Parent = enterButton

-- === Helper Functions ===
local function tryCopyToClipboard(text)
	local ok = false
	pcall(function()
		if setclipboard then
			setclipboard(text)
			ok = true
		elseif syn and syn.set_clipboard then
			syn.set_clipboard(text)
			ok = true
		end
	end)
	return ok
end

local function notify(msg)
	pcall(function()
		StarterGui:SetCore("SendNotification", {
			Title = "RedHub",
			Text = msg,
			Duration = 3
		})
	end)
end

-- === Button Events ===
copyButton.MouseButton1Click:Connect(function()
	local ok = tryCopyToClipboard(DISCORD_URL)
	if ok then
		notify("Discord link copied!")
	else
		notify("Copy not supported, opening link.")
	end
	pcall(function()
		GuiService:OpenBrowserWindow(DISCORD_URL)
	end)
end)

enterButton.MouseButton1Click:Connect(function()
	local key = keyBox.Text
	if key == "" then
		notify("Please enter a key!")
	else
		notify("Key entered: " .. key)
	end
end)

-- === Appearance Animation ===
frame.Position = UDim2.new(0.5, -150, 1, 0)
frame:TweenPosition(UDim2.new(0.5, -150, 0.5, -75), "Out", "Quad", 0.5, true)

-- === Auto-click Copy Discord after 3 seconds ===
task.delay(3, function()
	local ok = tryCopyToClipboard(DISCORD_URL)
	if ok then
		notify("Discord link copied automatically!")
	else
		notify("Copy not supported, opening link.")
		pcall(function()
			GuiService:OpenBrowserWindow(DISCORD_URL)
		end)
	end
end)
