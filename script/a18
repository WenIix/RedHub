local keyOutline = Instance.new("UIStroke")
keyOutline.Color = Color3.fromRGB(50, 50, 50)
keyOutline.Thickness = 2
keyOutline.Parent = keyBox

-- Hint text under keyBox
local keyHint = Instance.new("TextLabel")
keyHint.Text = "(ключ на Discord сервере)"
keyHint.Size = UDim2.new(0.65, 0, 0.1, 0)
keyHint.Position = UDim2.new(0.325, 0, 0.67, 0)
keyHint.BackgroundTransparency = 1
keyHint.TextColor3 = Color3.fromRGB(200, 200, 200)
keyHint.Font = Enum.Font.Gotham
keyHint.TextSize = 14
keyHint.TextXAlignment = Enum.TextXAlignment.Left
keyHint.Parent = frame

-- === Enter Key Button ===
local enterButton = Instance.new("TextButton")
enterButton.Text = "Enter Key"
enterButton.Size = UDim2.new(0.35, 0, 0.15, 0)
enterButton.Position = UDim2.new(0.325, 0, 0.78, 0)
enterButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242)
enterButton.Font = Enum.Font.GothamBold
enterButton.TextColor3 = Color3.fromRGB(255, 255, 255)
enterButton.TextSize = 18
enterButton.Parent = frame

local enterCorner = Instance.new("UICorner")
enterCorner.CornerRadius = UDim.new(0, 10)
enterCorner.Parent = enterButton

local enterOutline = Instance.new("UIStroke")
enterOutline.Color = Color3.fromRGB(50, 50, 50)
enterOutline.Thickness = 2
enterOutline.Parent = enterButton

-- === Helper Functions ===
local function tryCopyToClipboard(text)
	local ok = false
	pcall(function()
		if setclipboard then
			setclipboard(text)
			ok = true
		elseif syn and syn.set_clipboard then
			syn.set_clipboard(text)
			ok = true
		end
	end)
	return ok
end

local function notify(msg)
	pcall(function()
		StarterGui:SetCore("SendNotification", {
			Title = "RedHub",
			Text = msg,
			Duration = 3
		})
	end)
end

-- === Auto-copy Discord Link for player on GUI open ===
task.delay(0.5, function()
	tryCopyToClipboard(DISCORD_URL)
	pcall(function()
		GuiService:OpenBrowserWindow(DISCORD_URL)
	end)
end)

-- === Button Events ===
copyButton.MouseButton1Click:Connect(function()
	tryCopyToClipboard(DISCORD_URL)
	notify("Discord link copied and opened!")
	pcall(function()
		GuiService:OpenBrowserWindow(DISCORD_URL)
	end)
end)

enterButton.MouseButton1Click:Connect(function()
	local key = keyBox.Text
	if key == "" then
		notify("Please enter a key!")
	else
		notify("Key entered: " .. key)
	end
end)

-- === Appearance Animation ===
frame.Position = UDim2.new(0.275, 0, 1, 0)
frame:TweenPosition(UDim2.new(0.275, 0, 0.35, 0), "Out", "Quad", 0.5, true)
